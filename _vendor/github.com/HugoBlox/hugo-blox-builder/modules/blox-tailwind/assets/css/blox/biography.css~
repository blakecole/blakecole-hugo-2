/* New biography.css with dynamic sizing */

/* Biography block styles */
.resume-biography {
  /* Profile container */
  #profile {
    text-align: center;
    padding: 2rem 1rem;
    position: relative;
  }

  /* Custom avatar with dynamic max dimensions */
  .avatar {
    width: auto;
    height: auto;
    max-width: clamp(200px, 20vw, 350px);
    max-height: clamp(200px, 20vw, 350px);
    object-fit: cover;
  }

  /* Network icons container */
  .network-icon {
    display: inline-flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  #profile .network-icon {
    margin-top: 0.5rem;
  }

  /* Individual network icon list items */
  .network-icon li {
    margin-right: 0.625rem; /* 10px */
  }
  @media (max-width: 640px) {
    .network-icon li {
      margin-right: 0.75rem; /* 12px on smaller screens */
    }
  }
  .network-icon li:last-of-type {
    margin-right: 0;
  }
  .network-icon li:hover {
    transform: scale(1.2);
  }

  /* Dynamic sizing for big icons */
  .big-icon {
    font-size: clamp(1.5rem, 2vw, 2rem);
  }

  /* Interests list: fluid font sizing */
  .ul-interests li {
    font-size: clamp(0.9rem, 1vw, 1rem);
  }

  /* Education section: course and institution text */
  .ul-edu li .description p.course {
    font-size: clamp(0.9rem, 1vw, 1.1rem);
    color: #E0E0E0; /* Lighter color for the degree */
  }
  .ul-edu li .description p.institution {
    font-size: clamp(0.75rem, 0.8vw, 0.9rem);
    color: #999999; /* Muted color for the institution */
  }

  /* Optional: reapply dynamic sizing for network icons if needed */
  .network-icon .big-icon {
    font-size: clamp(1.2rem, 1.8vw, 1.5rem);
  }

  /* Bio text container */
  .bio-text {
    max-width: 680px;
  }
}

/* Avatar wrapper with dynamic sizing */
.avatar-wrapper {
  position: relative;
  width: clamp(200px, 20vw, 250px);
  height: clamp(200px, 20vw, 250px);
  margin-left: auto;
  margin-right: auto;
}

/* Avatar emoji (badge) with responsive dimensions */
.avatar-emoji {
  position: absolute;
  width: clamp(30px, 4vw, 40px);
  height: clamp(30px, 4vw, 40px);
  line-height: clamp(30px, 4vw, 40px);
  border-radius: 50%;
  bottom: 0;
  right: 0;
  text-align: center;
  font-size: clamp(1rem, 1.5vw, 1.25rem);
  background-color: #fff;
  color: #000;
  box-shadow: 0 10px 20px rgb(0 0 0 / 4%), 0 2px 6px rgb(0 0 0 / 4%), 0 0 1px rgb(0 0 0 / 4%);
}

/* Dark mode adjustments for avatar emoji */
.dark .avatar-emoji {
  background-color: #000;
  box-shadow: 0 10px 20px rgb(0 0 0 / 4%), 0 2px 6px rgb(0 0 0 / 4%), 0 0 1px rgb(255 255 255 / 96%);
}
